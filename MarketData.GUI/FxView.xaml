<UserControl x:Class="MarketData.GUI.FxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="FxControl">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="FxDataGrid" 
                  DockPanel.Dock="Left" 
                  Grid.Column="0" 
                  AlternationCount="2" 
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  ItemsSource="{Binding Path=FxItems}" 
                  AutoGenerateColumns="False" >
            <interactivity:Interaction.Behaviors>
            </interactivity:Interaction.Behaviors>
            <!--<DataGrid.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="Menu1" IsEnabled="False"/>
                    <MenuItem Header="Menu2" IsEnabled="False"/>
                    <MenuItem Header="Menu3" IsEnabled="False"/>
                    <MenuItem Header="Menu4" IsEnabled="False"/>
                </ContextMenu>
            </DataGrid.ContextMenu>-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Currency 1" Binding="{Binding Currency1}"/>
                <DataGridTextColumn Header="Currency 2" Binding="{Binding Currency2}"/>
                <DataGridTextColumn Header="Rate" Binding="{Binding Rate}"/>
                <DataGridTextColumn Header="Update Time" Binding="{Binding UpdateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Expander BorderThickness="1" BorderBrush="SlateGray" IsExpanded="false" DockPanel.Dock="Right" ExpandDirection="Left" Grid.Column="1">
            <DataGrid Name="ColumnChooserDataGrid" 
                      AlternationCount="2" 
                      CanUserReorderColumns="True"
                      CanUserSortColumns="True"
                      GridLinesVisibility="Horizontal"
                      AutoGenerateColumns="False" 
                      ItemsSource="{Binding ElementName=FxDataGrid, Path=Columns}" 
                      HorizontalAlignment="Center" 
                      VerticalContentAlignment="Center" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Select" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <ItemContainerTemplate>
                                <CheckBox x:Name="SomeCheckBox" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Path=Item.Visibility, Converter={StaticResource  BooleanToVisibilityConverter}, FallbackValue=True}"/>
                            </ItemContainerTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Field" Binding="{Binding  Header}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Expander>
    </Grid>
</UserControl>