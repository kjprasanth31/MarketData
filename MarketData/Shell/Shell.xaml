                        </Path>
                    </MenuItem.Icon>
                    <MenuItem Header="View Logs"/>
                    <MenuItem Header="Open Log Folder"/>
                    <MenuItem Header="Save"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <xcad:DockingManager Grid.Row="1" x:Name="MyDockingManager" 
                           AllowMixedOrientation="True"
                           BorderBrush="DarkGray"
                           BorderThickness="2">
            <xcad:DockingManager.Resources>
                <Style TargetType="{x:Type xcad:LayoutGridResizerControl}">
                    <Setter Property="MaxWidth" Value="2"/>
                </Style>
                <Style TargetType="{x:Type xcad:LayoutAnchorableControl}">
                    <Setter Property="BorderBrush" Value="SlateGray"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Margin" Value="1"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
                <Style TargetType="{x:Type xcad:AnchorablePaneTitle}">
                    <Setter Property="Background" Value="White"/>
                </Style>
                
                <Style x:Key="LayoutStyle" TargetType="{x:Type xcad:LayoutAnchorablePaneControl}" BasedOn="{x:Reference LayoutAnchorablePaneControl}">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </xcad:DockingManager.Resources>
            <xcad:DockingManager.Theme>
                <xcad:GenericTheme/>
            </xcad:DockingManager.Theme>
            <xcad:LayoutRoot>
                <xcad:LayoutPanel DockWidth="*">
                </xcad:LayoutPanel>
            </xcad:LayoutRoot>
        </xcad:DockingManager>
    </Grid>
</UserControl>
