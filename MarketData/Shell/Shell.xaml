                </MenuItem>
                <!--<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>-->
                <MenuItem Header="Editor">
                    <MenuItem Header="Edit" Command="{Binding NewLayoutAnchorable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Header}"/>
                </MenuItem>
                <!--<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>-->
                <MenuItem Header="Tools">
                    <MenuItem Header="Zoom" />
                </MenuItem>
            </Menu>
            <Menu HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" Background="Transparent">
